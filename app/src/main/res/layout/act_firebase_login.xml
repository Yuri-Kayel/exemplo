<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.google.android.gms.common.SignInButton
        android:id="@+id/fire_log_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/fire_log_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        />

    <Button
        android:id="@+id/fire_log_off"
        style="@style/Button"
        android:text="LOG OFF"
        app:layout_constraintBottom_toTopOf="@id/fire_login_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fire_log_in"
        />

    <TextView
        android:id="@+id/fire_login_name"
        style="@style/Button"
        android:text="Nome"
        app:layout_constraintBottom_toTopOf="@id/fire_login_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fire_log_off"
        />

    <TextView
        android:id="@+id/fire_login_email"
        style="@style/Button"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@id/fire_login_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fire_login_name"
        />

    <ImageView
        android:id="@+id/fire_login_pic"
        style="@style/Button"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fire_login_email"
        />


</androidx.constraintlayout.widget.ConstraintLayout>