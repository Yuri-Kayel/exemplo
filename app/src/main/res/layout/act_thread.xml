<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/indigo_300"
    android:gravity="center"
    android:orientation="vertical"
    >

    <Switch
        android:id="@+id/thread_chave"
        style="@style/WRAP_CONTENT"
        android:padding="8dp"
        />

    <EditText
        android:id="@+id/thread_input"
        style="@style/WRAP_CONTENT"
        android:autofillHints="@string/whiskas_sache"
        android:gravity="center"
        android:hint="@string/segundos"
        android:inputType="number"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/thread_start"
        style="@style/Button"
        android:text="@string/start"
        />

    <Button
        android:id="@+id/thread_stop"
        style="@style/Button"
        android:text="@string/stop"
        />

    <Button
        android:id="@+id/thread_ui"
        style="@style/Button"
        android:padding="8dp"
        android:background="@color/red_500"
        android:text="@string/ui"
        />

</LinearLayout>