<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/permission_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="36dp"
            android:text="Resposta da solicitação"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/permission_external_storage"
            />

        <Button
            android:id="@+id/permission_external_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="WRITE EXTERNAL STORAGE"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/permission_write_contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="WRITE WRITE CONTACTS"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/permission_write_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="WRITE CALENDAR"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/permission_use_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="USE BIOMETRY"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/permission_record_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="RECORD AUDIO"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/permission_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="CAMERA"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/permission_internet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="INTERNET"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/permission_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="LOCATION"
            android:textSize="18sp"
            />

    </LinearLayout>
</ScrollView>